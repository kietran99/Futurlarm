<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/LayoutFunctionSwitcher"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="4">

    <ImageButton
        android:id="@+id/ButtonList"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#D7EEED"
        android:src="@drawable/futurlarm_list" />

    <ImageButton
        android:id="@+id/ButtonNewFuturLarm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#D7EEED"
        android:src="@drawable/new_futurlarm" />

    <ImageButton
        android:id="@+id/ButtonAchievement"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#D7EEED"
        android:src="@drawable/achievement" />

    <ImageButton
        android:id="@+id/ButtonSocial"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#D7EEED"
        android:src="@drawable/account_manager" />

</LinearLayout>