<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/LayoutListItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D7EEED">

    <ImageView
        android:id="@+id/ImageViewEvent"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/TextViewListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ImageViewEvent"
        android:layout_marginTop="10dp"
        android:text="NAME"
        android:textSize="20sp"
        android:textColor="#134B77"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/TextViewListTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ImageViewEvent"
        android:layout_below="@id/TextViewListName"
        android:layout_marginTop="10dp"
        android:text="hh : MM"
        android:textSize="20sp"
        android:textColor="#6354AC"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/TextViewListDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/TextViewListTime"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="mm/dd/YYYY"
        android:textSize="20sp"
        android:textColor="#A74118"
        android:textStyle="bold"/>
</RelativeLayout>